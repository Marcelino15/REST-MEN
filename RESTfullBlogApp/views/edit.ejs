<%- include("partials/header") %>
<div class="ui main text container segment">
    <div class="ui huge header">
        Edit <%= blog.title %>
    </div>
    <form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
        <div class="field">
            <label for="title">Title</label>
            <input type="text" id="title" name="blog[title]" value="<%= blog.title %>">
        </div>
        <div class="field">
            <label for="image">Image</label>
            <input type="text" id="image" name="blog[image]" value="<%= blog.image %>">
        </div>
        <div class="field">
            <label for="contents">Blog Contents</label>
            <textarea type="text" id="contents" name="blog[body]" ><%= blog.body %></textarea>
        </div>
        <button class="ui violet big basic button" type="submit">Submit</button>
    </form>
</div>
<%- include("partials/footer") %>